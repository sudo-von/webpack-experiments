{
  "name": "webpack-experiments",
  "version": "1.0.0",
  "description": "Webpack experiments repository",
  "main": "index.js",
  "scripts": {
    "build": "webpack --entry ./index.js --output-filename bundle.js --output-path ./dist --mode development",
    "build:dev": "webpack --config ./webpack.dev.js",
    "build:prod": "webpack --config ./webpack.prod.js",
    "build:multi": "webpack --config ./multi-entry-points/webpack.multi.js",
    "build:css": "webpack --config ./css-style-loader/webpack.config.js",
    "build:plugins": "webpack --config ./plugins/webpack.config.js",
    "build:hot-reload": "webpack serve --config ./webpack-dev-server/webpack.config.js",
    "build:babel": "webpack serve --config ./babel/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudo-von/webpack-experiments.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "von",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sudo-von/webpack-experiments/issues"
  },
  "homepage": "https://github.com/sudo-von/webpack-experiments#readme",
  "dependencies": {
    "webpack": "^5.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "babel-loader": "8.2.2",
    "css-loader": "5.0.1",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "style-loader": "2.0.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0"
  }
}
